@model Spice.Models.Copuns
@{
    ViewData["Title"] = "Create";
}
    <div class="divcolor">
        <br />
        <h2 class="text-info">Create Coupos</h2>
        <br />
        <div class="row">
            <div class="col-9">
                <form asp-action="create" enctype="multipart/form-data">
                    <div class="form-border">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Name" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Picture" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <input type="file" name="picture" id="picture" multiple asp-for="Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="CouponType" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Copuns.EcouponType>()" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Discount" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Discount" class="form-control" />
                            </div>
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="MinimumAmount" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="MinimumAmount" class="form-control" />
                            </div>
                            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="IsActive" class="custom-label"></label>
                            </div>
                            <div class="col-8">
                                <input type="checkbox" asp-for="IsActive" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-4">
                            </div>
                            <div class="col-4">
                                <input type="submit" value="Create" class="btn btn-success form-control" />
                            </div>
                            <div class="col-4">
                                <a asp-action="Index" class="btn btn-primary form-control">Back To Lists</a>
                            </div>

                        </div>
                        
                    </div>
                </form>
            </div>
        </div>

    </div>