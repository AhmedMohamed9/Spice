@model IEnumerable<Spice.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-success">List Of Categories</h2>
<br />

<p>
    <partial name="_createButtonPartial" />
    <br />
</p>
<table class="table table-hover divcolor ">
    <thead>
        <tr>
            <th style="font-size:30px" class="text-info">
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:25px">
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <partial name="_tablebuttonpartial_NoDetails" model="item.id" />
            </tr>
        }
    </tbody>
</table>

