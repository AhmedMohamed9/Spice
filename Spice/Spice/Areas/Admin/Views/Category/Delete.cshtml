@model Spice.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class=" text-danger">Are you Sure You Wan't to Delete This Category</h2>

<br />
<br />
<br />
<form asp-action="delete">
    <div class="border divcolor">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="name" class="col-form-label" style="font-size:26px"></label>
            </div>
            <div class="col-7">
                <input asp-for="name" readonly class="form-control" />
            </div>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group row" style="padding-top:20px">
            <div class="col-7 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-action="index" class="btn btn-success form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
