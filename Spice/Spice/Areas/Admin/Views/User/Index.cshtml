@model IEnumerable<Spice.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-success">List Of Users</h2>
<br />

<p>
    <a class="nav-link btn btn-info" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i> &nbsp; New Employee</a>
        <br />
</p>
<table class="table table-hover divcolor ">

    <thead>
        <tr>
            <th style="font-size:30px" class="text-info">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="font-size:30px" class="text-info">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="font-size:30px" class="text-info">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:25px">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="font-size:25px">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="font-size:25px">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                    {


                    <a class="btn btn-success text-white"asp-action="lock"asp-route-id="@item.Id"><i class="fas fa-lock-open"></i></a>
                    }else { 
                    <a class="btn btn-danger text-white"asp-action="Unlock"asp-route-id="@item.Id"><i class="fas fa-lock"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

