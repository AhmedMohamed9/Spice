@model IEnumerable<Spice.Models.Menuitem>


@if (Model.Count() > 0)
{
    <div class="post @Model.FirstOrDefault().Category.name.Replace(" ",string.Empty) menu-resturant">
    <h1 class="text-success">@Model.FirstOrDefault().Category.name</h1>

    @foreach (var item in Model)
            {
        <br />
                <div class="border-info col-12 divcolorrr " style="margin-top:10px;margin-bottom:10px;padding:10px;border:2.7px solid #fcfcfc!important;
                border-radius: 1.25rem !important;  box-shadow: 4px 5px 0px #888888; ">
                    <div class="row">
                        <div class="col-9">
                            <div class="row">
                                <div class="col-10">
                                    <h4 class="text-info" style="font-size:30px;">@item.name</h4>
                                    <br />
                                    <label class="badge badge-primary" style="font-size:19px;width:auto;height:35px">@item.subcategory.name</label>
                                    @if (item.spiceness == "0")
                                    {
                                        <label class="badge badge-danger" style="font-size:17px;width:91px;height:35px">@Menuitem.Espice.Na</label>
                                    }
                                    @if (item.spiceness == "1")
                                    {
                                        <label class="badge badge-danger" style="font-size:17px;width:91px;height:35px">@Menuitem.Espice.Spicy</label>
                                    }
                                    @if (item.spiceness == "2")
                                    {
                                        <label class="badge badge-danger" style="font-size:17px;width:91px;height:35px">@Menuitem.Espice.Veryspicy</label>
                                    }
                                </div>
                                <div class="col-2 text-right ">
                                    <h2 style="border: 1px solid;position:absolute;right:10px;padding-top:20px; width:95px;height:95px;text-align: center;background-color: #d40303;color: white;border-radius: 47px;">
                                        $@item.Price
                                    </h2>
                                </div>
                            </div>
                            <div class="row col-10 text-justify">
                                <p>@item.description</p>
                            </div>
                            <br />
                            <div class="row col-3 " style="position:absolute;bottom:0">
                                <a asp-action="Details" asp-area="Customer" class="btn btn-success cc"
                                   style="width: 114px;height: 38px;font-size: 22px;text-align: center;font-family: monospace;padding-bottom: 36px;"
                                   asp-route-id="@item.id">Details</a>
                            </div>
                        </div>
                        <div class="col-3">
                            <img src="~/images/@item.image"
                                 style="width:90%;border-radius: 15px;height:230px; border: 1px solid #17a2b8;box-shadow: 2px 4px 3px #888888;" />
                        </div>
                    </div>
                </div>
            }
        </div>
}